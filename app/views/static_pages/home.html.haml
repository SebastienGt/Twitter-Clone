- if logged_in?
  .row
    %aside.col-md-4
      %section.user_info
        = render 'shared/user_info'
      %section.stats
        = render 'shared/stats'
      %section.micropost_form
        = render 'shared/micropost_form'
    .col-md-8
      %h3
        = t('home.feed')
      = render 'shared/feed'
- else
  .center.jumbotron
    %h1
      = t('home.welcome')
      %h1
        %h2
          = t('home.subWelcome')
          %a{:href => "https://twitter.com", :target => "_blank"} Twitter inc.
        = link_to "#{t('home.signIn')}", signup_path, class: "btn btn-lg btn-primary"
  = link_to image_tag("rails.svg", alt: "Rails logo", width: "200"), "https://rubyonrails.org/"
= react_component("Test", { greeting: "Hello from react-rails." })
