- if current_user.profile.attached?
    = link_to image_tag(current_user.display_profile), current_user
- else
    = link_to gravatar_for(current_user, size: 50), current_user
%h1= current_user.name
%span= link_to "#{t('user.seeUser')}", current_user
%span= pluralize(current_user.microposts.count, "#{t('user.posts')}" )
